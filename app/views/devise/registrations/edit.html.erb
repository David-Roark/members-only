<div class="section">
  <div class="container">
    <div class="column is-8">
      <div class='box'>
        <div class="title">Edit
          <%= resource_name.to_s.humanize %></div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="control">
          <div class="field">

            <%= f.input :name, required: true, autofocus: true, wrapper:false, input_html: {class: 'input'}, label_html: {class: 'label'} %>
          </div>
        </div>
        <div class="control">
          <div class="field">

            <%= f.input :email, required: true, wrapper:false, input_html: {class: 'input'}, label_html: {class: 'label'} %>
          </div>

        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for:
            <%= resource.unconfirmed_email %></p>
        <% end %>
        <div class="control">
          <div class="field">
            <%= f.input :password, wrapper:false, hint: "leave it blank if you don't want to change it", required: false, label_html: {class: 'label'}, input_html: { autocomplete: "new-password", class: 'input' } %>
          </div>
        </div>
        <div class="control">
          <div class="field">
            <%= f.input :password_confirmation, wrapper:false, required: false,label_html: {class: 'label'}, input_html: { autocomplete: "new-password", class: 'input' } %>
          </div>
        </div>
        <div class="control">
          <div class="field">
            <%= f.input :current_password, wrapper: false, hint: "we need your current password to confirm your changes", required: true,label_html: {class: 'label'}, input_html: { autocomplete: "current-password", class: 'input' } %>
          </div>
        </div>
        <%= f.button :submit, "Update", class: 'button is-info' %>

      <% end %>

    </div>
  </div>
  <h3>Cancel my account</h3>

  <p>Unhappy?
    <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
</div>
