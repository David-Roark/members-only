<div class="section">
  <div class="container">
    <div class="column is-8">
      <div class='box'>
        <div class="title">Sign up</div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="control">
          <div class="field">
            <%= f.input :name, required: true, autofocus: true, wrapper:false, input_html: {class: 'input'}, label_html: {class: 'label'} %>
          </div>
        </div>
        <div class="control">
          <div class="field">
            <%= f.input :email, required: true, wrapper:false, input_html: {class: 'input'}, label_html: {class: 'label'} %>
          </div>
        </div>
        <div class="control">
          <div class="field">
            <%= f.input :password, wrapper:false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), required: false, label_html: {class: 'label'}, input_html: { autocomplete: "new-password", class: 'input' } %>
          </div>
        </div>
        <div class="control">
          <div class="field">
            <%= f.input :password_confirmation, wrapper:false, required: false,label_html: {class: 'label'}, input_html: { autocomplete: "new-password", class: 'input' } %>
          </div>
        </div>
        <%= f.button :submit, "Sign up", class: 'button is-info' %>
      <% end %>
      </div>
    </div>
  </div>
</div>
