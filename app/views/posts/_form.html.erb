<%= simple_form_for @post do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :title, autofocus: true, wrapper: false, label_html: {class: 'label'},
                        require: true, input_html: {class: 'input'} %>
  </div>
</div>
<div class="field">
  <div class="control">
    <%= f.input :body, wrapper: false, label_html: {class: 'label'}, input_html: {class: 'textarea'},
                       require: true, placeholder: "what's on your mind?" %>
  </div>
</div>
  <% if current_user %>
    <%= f.button :submit, class: 'button is-info' %>
  <% else %>
    <%= f.button :submit, class: 'button is-dark', disabled: true, value: 'LogIn to Create Post' %>
  <% end %>
<% end %>
